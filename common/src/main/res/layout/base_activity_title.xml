<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_activity_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_panel_height"
    android:layout_alignParentTop="true"
    android:background="@color/theme"
    android:elevation="2dp">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/btn_transparent_black"
        android:paddingLeft="@dimen/title_btn_padding"
        android:paddingRight="@dimen/title_btn_padding"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/text_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/panel_title_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/text_activity_title"
        android:elevation="1dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_title_right"
            android:background="@drawable/btn_transparent_black"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>